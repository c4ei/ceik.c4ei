<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Ladder List</title>
    <style>
        /* 간단한 스타일링 */
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
        .pagination {
            margin-top: 20px;
            text-align: center;
        }
        .pagination a {
            margin: 0 5px;
            padding: 5px 10px;
            text-decoration: none;
            border: 1px solid #ccc;
        }
        .pagination a.active {
            background-color: #007bff;
            color: white;
            border: 1px solid #007bff;
        }
    </style>
</head>
<body>
    <a href="/">HOME</a> / <a href="/ladder">사다리 게임</a> 
    <br>
    <h1>참여한 게임 목록</h1>
    <table>
        <thead>
            <tr>
                <th>게임 ID</th>
                <th>베팅 선택</th>
                <th>베팅 금액</th>
                <th>등록일</th>
                <th>결과</th>
                <th>승리 금액</th>
            </tr>
        </thead>
        <tbody>
            <% userBets.forEach(function(bet) { %>
                <tr>
                    <td><%= bet.game_id %></td>
                    <td><%= bet.bet_choice %></td>
                    <td><%= bet.bet_amount %></td>
                    <td><%= bet.YYMMDD %></td>
                    <td><%= bet.result %></td>
                    <td><%= bet.win_amount %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    
    <!-- 페이징 UI -->
    <div class="pagination">
        <% if (currentPage > 1) { %>
            <a href="/ladderList?page=<%= currentPage - 1 %>">이전</a>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/ladderList?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
        <% } %>

        <% if (currentPage < totalPages) { %>
            <a href="/ladderList?page=<%= currentPage + 1 %>">다음</a>
        <% } %>
    </div>


</body>
</html>
