<!DOCTYPE html>
<html>
<head>
    <title>Roulette</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0f0f0;
        }

        .container {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .roulette-container {
            position: relative;
            width: 300px;
            height: 300px;
            margin: auto;
        }
        .roulette {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            border: 10px solid #ccc;
            overflow: hidden;
            position: relative;
        }
        .roulette img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            transition: transform 4s ease-out;
        }
        .pointer {
            width: 0;
            height: 0;
            border-left: 20px solid transparent;
            border-right: 20px solid transparent;
            border-top: 20px solid red;
            position: absolute;
            top: 1px;
            left: 52%;
            transform: translateX(-50%);
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/">HOME</a>
        <h1>Roulette Game</h1>
        <p>User Email: <%= user.email %></p>
        <p>Points: <%= user.point %></p>
        <p>AAH Balance: <%= user.aah_balance %></p>

        <div class="roulette-container">
            <div class="roulette">
                <img src="/roulette.png" id="rouletteImage" />
                <div class="pointer"></div>
            </div>
        </div>
        <br /><br /><br />
        <button id="freeSpinButton" <%= user.canSpin ? '' : 'disabled' %>>Free Spin</button>
        <button id="pointSpinButton">Spin with Points</button>
    </div>
    <script>
        document.getElementById('freeSpinButton').addEventListener('click', function() {
            spinRoulette(true);
        });

        document.getElementById('pointSpinButton').addEventListener('click', function() {
            spinRoulette(false);
        });

        function spinRoulette(isFreeSpin) {
            fetch('/spinRoulette', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ freeSpin: isFreeSpin })
            })
            .then(response => response.json())
            .then(data => {
                if (data.error) {
                    alert(data.error);
                    return;
                }
                
                const result = data.result;
                console.log("Result from server:", result); // 디버깅 로그 추가

                const segmentAngles = {
                    '0.1 CEIK': 300,      // 2시
                    'Spin Again': 0,     // 12시
                    'Nothing': 60,      // 10시
                    '0.5 CEIK': 120,     // 4시
                    '1 CEIK': 180,       // 6시
                    '10 CEIK': 240       // 8시
                };
                const angle = segmentAngles[result];
                const totalAngle = angle + 720; // At least 2 full rotations

                const rouletteImage = document.getElementById('rouletteImage');
                rouletteImage.style.transition = 'transform 4s ease-out';
                rouletteImage.style.transform = `rotate(${totalAngle}deg)`;

                setTimeout(() => {
                    alert(`You won: ${result}`);
                    location.reload();
                }, 4000); // Match this with the transition time
            })
            .catch(error => console.error('Error:', error));
        }
    </script>
</body>
</html>
